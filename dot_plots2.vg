{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "repeat": {
      "row": ["Score"],
      "column": ["Health (Life Expectancy)","Family","Economy"]
    },
    "spec": {
      "height": 200,
      "width": 200,
      "data": {"url": "https://raw.githubusercontent.com/Sami-Hussein/Assignment-2/main/world-happiness-report-2015-2022-cleaned.csv"},
      "mark": {
          "type": "point",
          "filled": true
        },
      "params": [
        {
          "name": "brush",
          "select": {
            "type": "interval",
            "resolve": "union",
            "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
            "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
            "zoom": "wheel![event.shiftKey]"
          }
        },
        {
          "name": "grid",
          "select": {
            "type": "interval",
            "resolve": "global",
            "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
            "zoom": "wheel![!event.shiftKey]"
          },
          "bind": "scales"
        }
      ],
      "encoding": {
        "x": {"field": {"repeat": "column"}, "type": "quantitative"},
        "y": {
          "field": {"repeat": "row"},
          "type": "quantitative",
          "axis": {"minExtent": 30}
        },
        "tooltip": [
            {"field": {"repeat": "row"}, "type": "quantitative"},
            {"field": {"repeat": "column"}, "type": "quantitative"}
          ],
        "color": {
          "condition": {
            "param": "brush",
            "field": "continent",
            "type": "nominal"            
          },
          "value": "grey"
        }
      }
    }
  }
  